<AnimeBoxLayout@MDBoxLayout>:
    adaptive_height:True
    orientation:'vertical'

<AnimeLabel@MDLabel>:
    adaptive_height:True
    bold:True

<EpisodeButton>:
    pos_hint:{"center_y":0.5,"center_x":0.5}
    on_press:root.change_episode_callback(root.text)
    radius: 10
    MDButtonText:
        text:root.text



<AnimeScreenView>:
    md_bg_color: self.theme_cls.backgroundColor
    episodes_container:episodes_container
    servers_container:servers_container
    video_player:video_player
    anime_title_label:anime_title_label
    MDBoxLayout:
        padding:"10dp"
        orientation: 'vertical'
        MDBoxLayout:
            adaptive_height:True
            MDIconButton:
                icon:"arrow-left"
                on_press:root.manager_screens.current = root.caller_screen_name
            AnimeLabel:
                id:anime_title_label
                halign:"center"
        MDBoxLayout:
            VideoPlayer:
                id:video_player
                source:root.current_link
                auto_play:True
        AnimeBoxLayout:
            padding: "20dp"
            radius:5
            spacing:"10dp"
            md_bg_color: self.theme_cls.surfaceContainerLowColor
            AnimeBoxLayout:
                orientation:'horizontal'
                MDIconButton:
                    icon:"skip-previous"
                    on_press:root.previous_episode()
                MDIconButton:
                    icon:"skip-next"
                    on_press: root.next_episode()
                MDIconButton:
                    icon:"download"
                    on_press: 
                        if root.current_link: app.download_media(root.current_link, root.current_episode, root.current_media_item,root.current_server)
                MDButton:
                    on_press: 
                        if root.current_link: app.play_on_external_player(root.current_link, root.current_episode, root.current_media_item,root.current_server)
                    MDButtonText:
                        text:"Play on external player"
                AnimeLabel:
                    text:"Translation: "
                    padding: "10dp"
                    adaptive_width:True
                MDButton:
                    style: "outlined"
                    on_release: root.open_translation_menu(self)
                    MDButtonText:
                        text: root.current_translation_type

                AnimeLabel:
                    text:"Provider: "
                    padding: "10dp"
                    adaptive_width:True
                MDButton:
                    id: provider_btn
                    style: "outlined"
                    on_release: root.open_provider_menu(self)
                    MDButtonText:
                        id: provider_btn_text
                        text: root.current_provider
            AnimeBoxLayout:
                AnimeLabel:
                    text:"Server: "
                    padding: "10dp"
                    adaptive_width:True
                MDBoxLayout:
                    id: servers_container
                    adaptive_height: True
                    adaptive_width: True
            MDDivider:
            MDRecycleView:
                id: episodes_container
                size_hint_y:None
                height:"50dp"
                key_viewclass:"viewclass"
                RecycleBoxLayout:
                    size_hint: None,1
                    key_size:"width"
                    spacing:"10dp"
                    width:self.minimum_width
                    default_size_hint:0,0
                    default_size:30,30
                    default_pos_hint:{"center_y":0.5,"center_x":0.5}
