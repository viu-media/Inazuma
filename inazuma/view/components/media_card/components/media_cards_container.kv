<MediaCardsContainer>
    size_hint:1,None
    height: dp(300)
    container:container
    orientation: 'vertical'
    padding:"8dp"
    spacing:"8dp"
    MDLabel:
        bold:True 
        adaptive_height:True
        text:root.list_name
    MDScrollView:
        do_scroll_y: False
        MDBoxLayout:
            id:container
            size_hint:None,1
            width:self.minimum_width
            default_size_hint:None, None
            default_size:dp(140),dp(250)
            spacing:"10dp"
            padding:"0dp","16dp","100dp","16dp"
